<pattern id="{{id}}" x="0" y="0" width="1" height="1" patternUnits="objectBoundingBox">
  <rect x="0" y="0" width="100%" height="100%" fill="{{background}}" />
  <rect x="0" y="0" width="100%" height="100%" fill="url(#{{id}}line1)" />
  <rect x="0" y="0" width="100%" height="100%" fill="url(#{{id}}line2)" />
</pattern>
<pattern id="{{id}}line1" x="0" y="0" width="{{_width}}" height="1" patternUnits="objectBoundingBox">
  <rect x="0" y="0" width="{{lineStyle.strokeWidth}}" height="100%" fill="{{lineStyle.stroke}}" />
</pattern>
<pattern id="{{id}}line2" x="0" y="0" width="1" height="{{_height}}" patternUnits="objectBoundingBox">
  <rect x="0" y="0" width="100%" height="{{lineStyle.strokeWidth}}" fill="{{lineStyle.stroke}}" />
</pattern>